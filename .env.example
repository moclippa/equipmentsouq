# EquipmentSouq Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/equipmentsouq?schema=public"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# AI PROVIDERS
# =============================================================================
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-..."
GOOGLE_AI_API_KEY="AIza..."  # Gemini Flash-Lite for equipment classification

# =============================================================================
# PAYMENT PROVIDERS
# =============================================================================
# PayTabs (KSA/Bahrain)
PAYTABS_PROFILE_ID=""
PAYTABS_SERVER_KEY=""
PAYTABS_CLIENT_KEY=""
PAYTABS_REGION="SAU"

# Stripe (Backup/International)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# =============================================================================
# SMS (Twilio for OTP)
# =============================================================================
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER="+966..."

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR="./uploads"
S3_BUCKET=""
S3_REGION="me-south-1"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_ENDPOINT=""

# =============================================================================
# SECURITY (REQUIRED FOR PRODUCTION)
# =============================================================================
# Encryption key for sensitive data (bank details, etc.)
# MUST be 64 hex characters (32 bytes)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# =============================================================================
# REDIS (REQUIRED FOR PRODUCTION - Rate Limiting & Caching)
# =============================================================================
# Upstash Redis for distributed rate limiting and caching
# Create a free database at https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# =============================================================================
# CRON JOBS (REQUIRED FOR PRODUCTION)
# =============================================================================
# Secret for authenticating cron job requests (manual triggers)
# Generate with: openssl rand -hex 32
# Note: Vercel Cron has built-in authentication via x-vercel-cron header
CRON_SECRET="generate-with-openssl-rand-hex-32"

# =============================================================================
# MONITORING (Sentry)
# =============================================================================
# Sentry DSN for error tracking and performance monitoring
# Get this from: sentry.io > Project Settings > Client Keys (DSN)
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# Sentry organization and project slugs (for source map uploads)
SENTRY_ORG="equipment-souq"
SENTRY_PROJECT="javascript-nextjs"

# Sentry auth token for uploading source maps during build
# Generate at: sentry.io > Settings > Auth Tokens
# Required scopes: project:read, project:write, project:releases, org:read
SENTRY_AUTH_TOKEN="sntrys_xxx"

# Enable Sentry debug mode in development (optional)
# NEXT_PUBLIC_SENTRY_DEBUG="true"

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Platform fee percentage (8-12%)
PLATFORM_FEE_PERCENTAGE="10"
